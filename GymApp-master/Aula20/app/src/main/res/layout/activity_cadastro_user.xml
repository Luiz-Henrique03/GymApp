<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginusuarioapp"
    android:orientation="vertical"
    tools:context=".view.CadastroUsuarioActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Bem vindo FRANGO"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtNomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginVertical="5dp"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtEmailUsuario"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="2dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtSenhaUsuario"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginVertical="2dp"
        android:hint="Senha"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerProfessores"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginVertical="2dp" />

    <Button
        android:id="@+id/btnSalvarUsuario"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#000000"
        android:text="Salvar"
        android:textColor="#FF0000"
        android:textSize="34sp" />


</LinearLayout>