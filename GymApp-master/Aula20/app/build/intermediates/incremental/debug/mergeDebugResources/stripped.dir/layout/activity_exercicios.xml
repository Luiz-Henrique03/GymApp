<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/telaexercicios"
    tools:context=".view.ExerciciosActivity">

    <!-- RadioGroup para exercícios -->


    <!-- RadioButton para cada exercício -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tela de Exercicios"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:text="Supino reto"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:text="Supino declinado"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:text="Rosca alternado"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:text="Flexão"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:text="Remada"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise6"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:text="Remada polia baixa"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise7"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:text="Esteira"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/exercise8"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:buttonTint="#FF0000"
        android:lineSpacingExtra="8sp"
        android:text="Francês"
        android:textAlignment="viewStart"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerDiasSemana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="138dp"
        android:layout_height="65dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#000000"
        android:text="Cadastrar"
        android:textColor="#FF0000" />
</LinearLayout>