<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CadastroUsuarioActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem vindo ao app Antifrango"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtNomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginVertical="20dp"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtEmailUsuario"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Email"
        android:layout_marginVertical="20dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtSenhaUsuario"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginVertical="20dp"
        android:hint="Senha"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerProfessores"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginVertical="20dp"/>

    <Button
        android:id="@+id/btnSalvarUsuario"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Salvar" />



</LinearLayout>