<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#4169E1"
    tools:context=".view.MainActivity">


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Antifrango"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="73dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/peso" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Cadastrar UsuÃ¡rio"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnCadastrarProfessor"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Cadastrar Professor"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Login Professor"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnLoginUsuario"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Login Usuario"
        android:layout_marginBottom="15dp"/>



</LinearLayout>
